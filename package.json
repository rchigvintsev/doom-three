{
  "name": "doom-three",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npx tsc",
    "postbuild": "copyfiles ./*.html ./dist",
    "start": "node ./dist/index.js",
    "predev": "npm run build",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q ./dist/index.js\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Roman Chigvintsev",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "three": "^0.139.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.25",
    "concurrently": "^7.1.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.6.3"
  },
  "nodemonConfig": {
    "ext": "js,html",
    "events": {
      "restart": "copyfiles ./*.html ./dist"
    }
  }
}
